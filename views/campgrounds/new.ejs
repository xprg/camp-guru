<% layout('layouts/boilerplate')%>
      
<div class="row text-center mb-3">
   <h1>New campground registration</h1>
</div>
 <div class="col-6 offset-2">
        <form class="validate" action='/campgrounds/newcreate' method='post' enctype="multipart/form-data" novalidate>
            <div class='mb-3'>
                <label class='form-label' for='title'>Title</label>
                <input class ='form-control' type="text" id='title' name='campground[title]' required>
            </div>

            <div class='mb-3' >
              <label class="form-label" for='title'>Location</label>
              <input class="form-control" type="text" id='title' name='campground[location]' required>
            </div>

            <div class='mb-3' >
              <label class="form-label" for='image'>Image Url</label>
              <input class="form-control" type="file" id='image' name='image' required multiple>
            </div>

            <div class="mb-3 col-md-4">
              <label class="form label" for="price">Price (per day basis)</label>
            <div class="input-group mb-3">
              
              <span class="input-group-text">$</span>
              
              <input type="text" class="form-control"  id ="price" name="campground[price]" required>
            </div>
            </div>

            <div class='mb-3' >
              <label class="form-label" for='description'>Description</label>
              <textarea class="form-control"  id='description' name='campground[description]'>Write description here</textarea>

            </div>
<button class="btn btn-success">Submit</button>

        </form>
      </div>

